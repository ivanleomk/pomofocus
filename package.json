{
  "name": "pomofocus",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "pages:build": "npx @cloudflare/next-on-pages",
    "preview": "npm run pages:build && wrangler pages dev",
    "deploy": "npm run pages:build && wrangler pages deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv env.d.ts",
    "cloudflare:reset-local-db": "wrangler d1 execute dev-db-pomodoro --local --file=./schema/init.sql",
    "cloudflare:deploy-db": "wrangler d1 execute dev-db-pomodoro --remote --file=./schema/init.sql"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.0.5",
